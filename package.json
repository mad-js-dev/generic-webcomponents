{
  "name": "@mad-js-dev/generic-webcomponents",
  "version": "0.1.17",
  "description": "A collection of reusable web components that work across different frameworks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mad-js-dev/generic-webcomponents.git"
  },
  "homepage": "https://mad-js-dev.github.io/generic-webcomponents",
  "keywords": [
    "webcomponents",
    "react",
    "vue",
    "ui",
    "components",
    "custom-elements",
    "collapsible"
  ],
  "files": [
    "dist",
    "types",
    "src/wrappers/react/index.d.ts"
  ],
  "types": "./types/index.d.ts",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./react": {
      "types": "./src/wrappers/react/index.d.ts",
      "import": "./dist/react/index.es.js",
      "require": "./dist/react/index.umd.js"
    },
    "./vue": {
      "types": "./src/wrappers/vue/index.d.ts",
      "import": "./dist/vue/index.es.js",
      "require": "./dist/vue/index.umd.js"
    },
    "./components/*": "./src/components/*/index.js"
  },
  "browser": "dist/index.umd.js",
  "scripts": {
    "dev": "vite --config vite.config.js",
    "docs:dev": "vite --config vite.config.js --mode docs",
    "build": "npm run clean && npm run build:core && npm run build:wrappers",
    "build:core": "vite build --mode production",
    "build:wrappers": "npm run build:react && npm run build:vue",
    "build:react": "vite build --config vite.react.config.js",
    "build:vue": "vite build --config vite.vue.config.js",
    "build:docs": "vite build --mode docs",
    "clean": "rimraf dist",
    "preview": "vite preview",
    "preview:docs": "vite preview --port 4173",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm run build:docs",
    "deploy": "node gh-pages.js",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "babel-jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^3.7.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "rimraf": "^6.0.1"
  }
}
